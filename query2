GROUP BY

es1
SELECT YEAR(`enrolment_date`) AS anno_iscrizione, COUNT(YEAR(`enrolment_date`)) AS iscrizioni_annuali FROM `students` GROUP BY YEAR(`enrolment_date`)

es2
SELECT office_address, COUNT(office_address) AS numero_uffici_insegnanti FROM `teachers` GROUP BY office_address

es3
SELECT exam_id, AVG(vote) FROM `exam_student` GROUP BY exam_id

es4
SELECT degree_id, COUNT(name) AS numero_corsi FROM `courses` GROUP BY degree_id

JOIN

es1
SELECT students.name, students.surname FROM `students` JOIN `degrees` ON students.degree_id = degrees.id WHERE degrees.name = 'Corso di Laurea in Economia'

es2
SELECT `degrees`.`name` FROM `departments` JOIN `degrees` ON `departments`.`id` = `degrees`.`department_id` WHERE `departments`.`name` = 'Dipartimento di Neuroscienze'

es3
SELECT `courses`.`name` AS nome_corso FROM `teachers` JOIN `course_teacher` ON `teachers`.`id` = `course_teacher`.`teacher_id` JOIN `courses` ON `course_teacher`.`course_id` = `courses`.`id` WHERE `teachers`.`id` = 44

